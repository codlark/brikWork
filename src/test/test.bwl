layout {
    width: 2.25in
    height: 3.1/2in
    #name: test[card-index].png
    output: out/
    #data: test.csv
    dpi: 300
    #csv: excel

    #template: template.bwl
}
export {
    #pdf {
        margin: 1in
    #}
}
#pdf {
#    border: 0.01in
#    #margin: 1in
#}

defaults {
    #fontFamily: Times New Roman
}

title {
    type: label
    x: center
    y: .25in
    width: 1.75in
    height: 2in
    text: [title]
    font-size: 30pt
    #decoration: italic underline
}
icon {
    type: image
    x: .5in
    y: 7/8in
    rotation: 0
    source: res/[img]
    
    caption {
        type: label
        text: a face
        x: center
        y: .25in
        #alignment: no
        #width: 1in
    }
}

rotator {
    type: rect
    x: 1.25in
    y: 7/8in
    width: 3/4in
    height: 3/8in
    rotate: 180
    rotated {
        type: rect
        x: 0
        y: 0

    }

}
bodyBorder {
    type: rect
    foo: bar
    #x: center
    #y: 1.5in
    position: center, 1.5in
    width: 1.75in
    #lineWidth: 0.01in
    height: 1.75in
    #xRadius: 1/8in; yRadius: 1/4in;
    radius: 1/8in, 1/4in
}
body {
    type: label
    x: center
    y: 1.625in
    width: 1.5in
    height: 1.25in
    text: [body]
    font-family: Cormorant
}
#banjo {draw: yes; lineColor: blue}


lineHolder {
    type: rect
    x:0
    y:0in
    width:1in
    height: 1in
    draw: no
    line {
        type: rect
        x: 0
        y: 150%
        width: 50%
        height:50%
        x2: center
        y2: 100
    }
}


data {
title, img, body
Smile, smile.png, This face is smiling.
Neutral, flat.png, This face is neither smiling nor frowning.
Frown, frown.png, This face is frowning\, [i|unfortunate].
}