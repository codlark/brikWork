layout {
    size: 2.25in, 3.5in
    output: out/
    #data: test.csv
    dpi: 300
    #csv: excel

    template: template.bwl
}
export {
    include-bleed: no
    pdf {
        #margin: foo
        name: yams
    }
}


defaults {
    #fontFamily: Times New Roman
}

title {
    type: text
    x: center
    y: .25in
    width: 1.75in
    height: 2in
    text: [title]
    font-size: 30pt
    #decoration: italic underline
}
icon {
    type: image
    x: .5in
    y: 7/8in
    angle: 0
    source: res/[img]

    caption {
        type: text
        text: a face
        x: center
        y: .25in
        #alignment: no
        #width: 1in
    }
}

rotator {
    type: rect
    x: 1.25in
    y: 7/8in
    width: 3/4in
    height: 3/8in
    angle: 180
    rotated {
        type: rect
        x: 0
        y: 0

    }

}
bodyBorder {
    type: rect
    foo: bar
    #x: center
    #y: 1.5in
    position: center, 1.5in
    width: 1.75in
    #lineWidth: 0.01in
    height: 1.75in
    #xRadius: 1/8in; yRadius: 1/4in;
    radius: 1/8in, 1/4in
}
body {
    type: text
    x: center
    y: 1.625in
    width: 1.5in
    height: 1.25in
    text: [body]
    font-family: Cormorant
}

round {
    type: circle
    draw: no
    diameter: 1in, 1/2in
    fill-color: transparent
}

banjo {
    start: 0, 0
    end: 1.25in, 7/8in
    draw: yes
    line: 5px, blue
    #x2: 1.25in
    #y2: 7/8in
}


lineHolder {
    type: rect
    x:0
    y:0in
    width:1in
    height: 1in
    draw: no
    line {
        type: rect
        x: 0
        y: 150%
        width: 50%
        height:50%
        x2: center
        y2: 100
    }
}


data {
title, img, body
Smile, smile.png, This face is smiling.
Neutral, flat.png, This face is neither smiling nor frowning.
Frown, frown.png, This face is frowning\, [i|unfortunate].
}