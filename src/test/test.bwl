layout {
    width: 2.25in
    height: 3.1/2in
    wiggle: foo
    name: test[assetIndex].png
    output: out/
    #data: test.csv
    dpi: 300

    template: template.bwl
}
pdf {
}
title {
    type: label
    x: center
    y: .25in
    width: 1.75in
    height: 2in
    text: [title]
    fontSize: 30pt
}
icon {
    type: image
    x: .5in
    y: 7/8in
    source: res/[img]

    caption {
        type: label
        text: a face
        x: center
        y: .25in
        #alignment: no
        #width: 1/4in
    }

}
bodyBorder {
    type: rect
    x: center
    y: 1.5in
    width: 1.75in
    #lineWidth: 0.01in
    height: 1.75in
    xRadius: 1/8in; yRadius: 1/4in;
}
body {
    type: label
    x: center
    y: 1.625in
    width: 1.5in
    height: 1.25in
    text: [b|[body]]
    fontFamily: Cormorant
}
banjo {draw: no; lineColor: blue}

lineHolder {
    type: rect
    x:0
    y:0in
    width:1in
    height: 1in
    draw: no
    line {
        type: rect
        x: 0
        y: 150%
        width: 50%
        height:50%
        x2: center
        y2: 100
    }
}


data {
title, img, body
Smile, smile.png, This face is smiling.
Neutral, flat.png, This face is neither smiling nor frowning.
Frown, frown.png, This face is frowning\, [i|unfortunate].
}